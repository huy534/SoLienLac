<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout android:padding="12dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvTenLop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên lớp"/>
        <TextView android:id="@+id/tvKhoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khối"/>
        <TextView android:id="@+id/tvNamHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm học"/>
        <TextView android:id="@+id/tvSiSo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sĩ số"/>
        <TextView android:id="@+id/tvGVCN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giáo viên CN"/></LinearLayout>
</androidx.cardview.widget.CardView>

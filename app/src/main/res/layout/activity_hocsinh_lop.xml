<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tìm kiếm học sinh -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchHocSinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Tìm học sinh..."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView danh sách học sinh -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHocSinh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchHocSinh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView rỗng -->
    <TextView
        android:id="@+id/tvEmptyHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có học sinh"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

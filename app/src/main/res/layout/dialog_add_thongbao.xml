<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gửi từ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gửi từ:"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etGuiTu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tên người gửi"/>
        </LinearLayout>

        <!-- Tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tiêu đề:"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etTieuDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nhập tiêu đề"/>
        </LinearLayout>

        <!-- Thời gian (có thể bật TimePicker/DateTimePicker từ code) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thời gian:"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/etThoiGian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="2025-10-02 10:30"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Nội dung (dài) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung:"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/etNoiDung"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="Nhập nội dung thông báo"/>

    </LinearLayout>
</ScrollView>